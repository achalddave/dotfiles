function sa () {
    if [[ "$#" < 1 || ("$1" != "-f" && "$1" != "--force" ) ]] ; then
        if [ -n "$SSH_AUTH_SOCK" ] ; then
            echo "You already seem to have an SSH agent running."
            echo "Pass [-f|--force] to override this."
            return 1
        fi
    fi
    eval `ssh-agent`
    ssh-add
}

function fixenv() {
    eval $(tmux showenv -s DISPLAY)
    eval $(tmux showenv -s SSH_AUTH_SOCK)
}

